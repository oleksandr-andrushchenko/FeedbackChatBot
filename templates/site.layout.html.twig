{% trans_default_domain 'site.layout' %}
<!DOCTYPE html>
<html lang="{{ locale.code }}">
<head>
    <meta charset="utf-8">
    <meta name="robots" content="noindex"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ page == 'index' ? '' : (page|trans ~ ' - ') }}{{ contacts.botName }}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>{{ 'icon.search'|trans({}, 'tg.feedbacks') }}</text></svg>">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <style>
        #breadcrumbs {
            --bs-breadcrumb-divider: '>';
        }

        #locale-switcher {
            text-transform: capitalize;
        }
    </style>
    {% block css %}{% endblock %}
</head>
<body>
{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand"
               href="{{ path('app.site_index') }}">{{ 'icon.search'|trans({}, 'tg.feedbacks') }} {{ contacts.botName }}</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    {% for _page in pages %}
                        {% if _page == page %}
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page"
                                   href="javascript:void(0)">{{ _page|trans }}</a>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app.site_' ~ _page) }}">{{ _page|trans }}</a>
                            </li>
                        {% endif %}
                    {% endfor %}
                    <li class="nav-item dropdown" id="locale-switcher">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                           aria-expanded="false">
                            {{ locale.icon }} {{ locale.name }}
                        </a>
                        <ul class="dropdown-menu">
                            {% for _locale in locales %}
                                {% if _locale.code != locale.code %}
                                    <li>
                                        <a class="dropdown-item"
                                           href="{{ path(app.request.attributes.get('_route'), {_locale: _locale.code}) }}">{{ _locale.icon }} {{ _locale.name }}</a>
                                    </li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mb-3">
        <nav id="breadcrumbs" class="my-3" aria-label="breadcrumb">
            <ol class="breadcrumb">
                {% block breadcrumbs %}
                    {% if (page == 'index') %}
                        <li class="breadcrumb-item active" aria-current="page">{{ page|trans }}</li>
                    {% else %}
                        <li class="breadcrumb-item"><a href="{{ path('app.site_index') }}">{{ 'index'|trans }}</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{{ page|trans }}</li>
                    {% endif %}
                {% endblock %}
            </ol>
        </nav>

        <h1>{{ page == 'index' ? contacts.botName : page|trans }}</h1>

        {% block content %}{% endblock %}

        <a href="{{ contacts.botLink }}" class="btn btn-primary btn-lg">{{ 'open_bot_button'|trans }}</a>

        {% if page != 'contacts' %}
            <a href="{{ path('app.site_contacts') }}"
               class="btn btn-secondary">{{ 'left_comment_button'|trans }}</a>
        {% endif %}
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
            crossorigin="anonymous"></script>
    {% block js %}{% endblock %}
{% endblock %}
</body>
</html>
