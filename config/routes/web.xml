<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        https://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="app.web.index" path="/" controller="app.controller.site::index" methods="GET"/>
    <route id="app.web.telegram.webhook" path="/telegram/webhook/{bot}" controller="app.controller.telegram::webhook"
           methods="POST">
        <default key="bot">default</default>
    </route>

</routes>