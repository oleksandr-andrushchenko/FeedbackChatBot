<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="app.site_contact_options_factory"
                 class="App\Service\Site\SiteContactOptionsFactory" lazy="true">
            <argument type="service" id="app.repository.telegram_bot"/>
        </service>
        <service id="app.site_url_generator" class="App\Service\Site\SiteUrlGenerator" lazy="true">
            <argument>%app.site_base_url%</argument>
            <argument type="service" id="Symfony\Component\Routing\Generator\UrlGeneratorInterface"/>
        </service>
        <service id="app.site_view_response_factory" class="App\Service\Site\SiteViewResponseFactory" lazy="true">
            <argument type="service" id="twig"/>
            <argument type="service" id="translation.locale_switcher"/>
            <argument type="service" id="app.intl_locale_provider"/>
            <argument type="service" id="app.feedback_site_contact_options"/>
        </service>
    </services>
</container>