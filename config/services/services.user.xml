<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="app.user_upserter" class="App\Service\User\UserUpserter" lazy="true">
            <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>
        <service id="app.user_rating_syncer" class="App\Service\User\UserRatingSyncer" lazy="true">
            <argument type="service" id="app.repository.feedback"/>
        </service>
        <service id="app.user_finder" class="App\Service\User\UserFinder" lazy="true"/>
        <service id="app.user_data_purger" class="App\Service\User\UserDataPurger" lazy="true">
            <argument type="service" id="app.repository.messenger_user"/>
        </service>
        <service id="app.user_contact_message_creator" class="App\Service\User\UserContactMessageCreator">
            <argument type="service" id="app.validator"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="app.logger_activity"/>
        </service>
    </services>
</container>