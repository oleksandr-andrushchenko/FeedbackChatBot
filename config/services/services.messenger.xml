<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="app.messenger_connection_link_maker" class="App\Service\Messenger\MessengerConnectionLinkMaker"/>
        <service id="app.messenger_user_upserter" class="App\Service\Messenger\MessengerUserUpserter">
            <argument type="service" id="app.repository.messenger_user"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>
    </services>
</container>