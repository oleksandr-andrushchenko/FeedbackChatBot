<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="app.lookup_processor_feedbacks" class="App\Service\Lookup\Processor\FeedbackLookupProcessor"
                 lazy="true">
            <argument type="service" id="app.feedback_searcher"/>
            <tag name="app.lookup_processor" processor="feedbacks"/>
        </service>
        <service id="app.lookup_processor_clarity" class="App\Service\Lookup\Processor\ClarityLookupProcessor"
                 lazy="true">
            <argument>%kernel.environment%</argument>
            <argument type="service" id="http_client"/>
            <tag name="app.lookup_processor" processor="clarity"/>
        </service>
        <service id="app.lookup_processor_ukrainian_court"
                 class="App\Service\Lookup\Processor\UkrainianCourtLookupProcessor"
                 lazy="true">
            <argument type="service" id="http_client"/>
            <tag name="app.lookup_processor" processor="ukrainian_court"/>
        </service>
        <service id="app.lookup_viewer_helper" class="App\Service\Lookup\Viewer\LookupViewerHelper" lazy="true">
            <argument type="service" id="app.array_string_normalizer_and_filterer"/>
        </service>
        <service id="app.lookup_viewer_telegram_feedbacks"
                 class="App\Service\Lookup\Viewer\FeedbackTelegramLookupViewer"
                 lazy="true">
            <argument type="service" id="app.feedback_telegram_view_provider"/>
            <argument type="service" id="app.translator"/>
            <tag name="app.lookup_viewer_telegram" processor="feedbacks"/>
        </service>
        <service id="app.lookup_viewer_telegram_clarity"
                 class="App\Service\Lookup\Viewer\ClarityTelegramLookupViewer" lazy="true">
            <argument type="service" id="app.lookup_viewer_helper"/>
            <argument type="service" id="app.translator"/>
            <tag name="app.lookup_viewer_telegram" processor="clarity"/>
        </service>
        <service id="app.lookup_processor_telegram" class="App\Service\Lookup\Processor\LookupProcessor" lazy="true">
            <argument type="tagged_locator" tag="app.lookup_processor" index-by="processor"/>
            <argument type="tagged_locator" tag="app.lookup_viewer_telegram" index-by="processor"/>
            <argument type="service" id="logger"/>
        </service>
    </services>
</container>