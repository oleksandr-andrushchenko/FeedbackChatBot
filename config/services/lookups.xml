<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="app.lookup_processor_feedbacks" class="App\Service\Lookup\Processor\FeedbackLookupProcessor"
                 lazy="true">
            <argument type="service" id="app.feedback_searcher"/>
            <tag name="app.lookup_processor" processor="feedbacks"/>
        </service>
        <service id="app.lookup_processor_searches" class="App\Service\Lookup\Processor\SearchLookupProcessor"
                 lazy="true">
            <argument type="service" id="app.feedback_search_searcher"/>
            <tag name="app.lookup_processor" processor="searches"/>
        </service>
        <service id="app.lookup_processor_clarity" class="App\Service\Lookup\Processor\ClarityLookupProcessor"
                 lazy="true">
            <argument>%kernel.environment%</argument>
            <argument type="service" id="app.crawler_provider"/>
            <tag name="app.lookup_processor" processor="clarity"/>
        </service>
        <service id="app.lookup_processor_ukraine_corrupts"
                 class="App\Service\Lookup\Processor\UkraineCorruptLookupProcessor" lazy="true">
            <argument>%kernel.environment%</argument>
            <argument type="service" id="app.http_requester"/>
            <tag name="app.lookup_processor" processor="ukraine_corrupts"/>
        </service>
        <service id="app.lookup_viewer" class="App\Service\Lookup\Viewer\LookupViewer" abstract="true" lazy="true">
            <argument type="service" id="app.translator"/>
        </service>
        <service id="app.lookup_viewer_telegram_feedbacks"
                 class="App\Service\Lookup\Viewer\FeedbackTelegramLookupViewer"
                 parent="app.lookup_viewer" lazy="true">
            <argument type="service" id="app.feedback_telegram_view_provider"/>
            <tag name="app.lookup_viewer_telegram" processor="feedbacks"/>
        </service>
        <service id="app.lookup_viewer_telegram_searches" class="App\Service\Lookup\Viewer\SearchTelegramLookupViewer"
                 parent="app.lookup_viewer" lazy="true">
            <argument type="service" id="app.feedback_search_telegram_view_provider"/>
            <tag name="app.lookup_viewer_telegram" processor="searches"/>
        </service>
        <service id="app.lookup_viewer_telegram_clarity" class="App\Service\Lookup\Viewer\ClarityTelegramLookupViewer"
                 parent="app.lookup_viewer" lazy="true">
            <tag name="app.lookup_viewer_telegram" processor="clarity"/>
        </service>
        <service id="app.lookup_viewer_telegram_ukraine_corrupts"
                 class="App\Service\Lookup\Viewer\UkraineCorruptTelegramLookupViewer" parent="app.lookup_viewer"
                 lazy="true">
            <tag name="app.lookup_viewer_telegram" processor="ukraine_corrupts"/>
        </service>
        <service id="app.lookup_lookuper_telegram" class="App\Service\Lookup\Lookuper" lazy="true">
            <argument type="tagged_locator" tag="app.lookup_processor" index-by="processor"/>
            <argument type="tagged_locator" tag="app.lookup_viewer_telegram" index-by="processor"/>
            <argument type="service" id="logger"/>
        </service>
    </services>
</container>