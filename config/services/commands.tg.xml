<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="app.command.telegram_webhook_update" class="App\Command\Telegram\TelegramBotWebhookUpdateCommand"
                 lazy="true">
            <argument type="service" id="app.repository.telegram_bot"/>
            <argument type="service" id="app.telegram_webhook_updater"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="app.telegram_webhook_info_provider"/>

            <tag name="console.command" command="telegram:bot:webhook:update"/>
        </service>
        <service id="app.command.telegram_bot_webhook_remove"
                 class="App\Command\Telegram\TelegramBotWebhookRemoveCommand" lazy="true">
            <argument type="service" id="app.repository.telegram_bot"/>
            <argument type="service" id="app.telegram_registry"/>
            <argument type="service" id="app.telegram_webhook_remover"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>

            <tag name="console.command" command="telegram:bot:webhook:remove"/>
        </service>
        <service id="app.command.telegram_webhook_show" class="App\Command\Telegram\TelegramBotWebhookShowCommand"
                 lazy="true">
            <argument type="service" id="app.repository.telegram_bot"/>
            <argument type="service" id="app.telegram_webhook_info_provider"/>

            <tag name="console.command" command="telegram:bot:webhook:show"/>
        </service>
        <service id="app.command.telegram_bot_commands_update"
                 class="App\Command\Telegram\TelegramBotCommandsUpdateCommand" lazy="true">
            <argument type="service" id="app.repository.telegram_bot"/>
            <argument type="service" id="app.telegram_registry"/>
            <argument type="service" id="app.telegram_commands_updater"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>

            <tag name="console.command" command="telegram:bot:commands:update"/>
        </service>
        <service id="app.command.telegram_bot_commands_remove"
                 class="App\Command\Telegram\TelegramBotCommandsRemoveCommand" lazy="true">
            <argument type="service" id="app.repository.telegram_bot"/>
            <argument type="service" id="app.telegram_registry"/>
            <argument type="service" id="app.telegram_commands_remover"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>

            <tag name="console.command" command="telegram:bot:commands:remove"/>
        </service>
        <service id="app.command.telegram_bot_texts_update"
                 class="App\Command\Telegram\TelegramBotTextsUpdateCommand" lazy="true">
            <argument type="service" id="app.repository.telegram_bot"/>
            <argument type="service" id="app.telegram_texts_updater"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="app.telegram_bot_texts_info_provider"/>

            <tag name="console.command" command="telegram:bot:texts:update"/>
        </service>
        <service id="app.command.telegram_bot_texts_show"
                 class="App\Command\Telegram\TelegramBotTextsShowCommand" lazy="true">
            <argument type="service" id="app.repository.telegram_bot"/>
            <argument type="service" id="app.telegram_bot_texts_info_provider"/>

            <tag name="console.command" command="telegram:bot:texts:show"/>
        </service>
        <service id="app.command.telegram_bot_create" class="App\Command\Telegram\TelegramBotCreateCommand" lazy="true">
            <argument type="service" id="app.repository.telegram_bot"/>
            <argument type="service" id="app.telegram_bot_creator"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="app.telegram_bot_info_provider"/>

            <tag name="console.command" command="telegram:bot:create"/>
        </service>
        <service id="app.command.telegram_bot_show_all" class="App\Command\Telegram\TelegramBotShowAllCommand"
                 lazy="true">
            <argument type="service" id="app.repository.telegram_bot"/>
            <argument type="service" id="app.telegram_bot_info_provider"/>

            <tag name="console.command" command="telegram:bot:show-all"/>
        </service>
        <service id="app.command.telegram_bot_remove" class="App\Command\Telegram\TelegramBotRemoveCommand"
                 lazy="true">
            <argument type="service" id="app.repository.telegram_bot"/>
            <argument type="service" id="app.telegram_bot_remover"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>

            <tag name="console.command" command="telegram:bot:remove"/>
        </service>
        <service id="app.command.telegram_bot_toggle_admin_only"
                 class="App\Command\Telegram\TelegramBotToggleAdminOnlyCommand" lazy="true">
            <argument type="service" id="app.repository.telegram_bot"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>

            <tag name="console.command" command="telegram:bot:toggle-admin-only"/>
        </service>
        <service id="app.command.telegram_bot_toggle_check_updates"
                 class="App\Command\Telegram\TelegramBotToggleCheckUpdatesCommand" lazy="true">
            <argument type="service" id="app.repository.telegram_bot"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>

            <tag name="console.command" command="telegram:bot:toggle-check-updates"/>
        </service>
        <service id="app.command.telegram_bot_toggle_check_requests"
                 class="App\Command\Telegram\TelegramBotToggleCheckRequestsCommand" lazy="true">
            <argument type="service" id="app.repository.telegram_bot"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>

            <tag name="console.command" command="telegram:bot:toggle-check-requests"/>
        </service>
        <service id="app.command.telegram_bot_toggle_accept_payments"
                 class="App\Command\Telegram\TelegramBotToggleAcceptPaymentsCommand" lazy="true">
            <argument type="service" id="app.repository.telegram_bot"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>

            <tag name="console.command" command="telegram:bot:toggle-accept-payments"/>
        </service>
        <service id="app.command.telegram_bot_info" class="App\Command\Telegram\TelegramBotShowCommand" lazy="true">
            <argument type="service" id="app.repository.telegram_bot"/>
            <argument type="service" id="app.telegram_bot_info_provider"/>

            <tag name="console.command" command="telegram:bot:show"/>
        </service>
        <service id="app.command.telegram_bot_payment_method_create"
                 class="App\Command\Telegram\TelegramBotPaymentMethodCreateCommand" lazy="true">
            <argument type="service" id="app.repository.telegram_bot"/>
            <argument type="service" id="app.telegram_payment_method_creator"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="app.telegram_payment_method_info_provider"/>

            <tag name="console.command" command="telegram:bot:payment-method:create"/>
        </service>
        <service id="app.command.telegram_bot_payment_method_remove"
                 class="App\Command\Telegram\TelegramBotPaymentMethodRemoveCommand" lazy="true">
            <argument type="service" id="app.repository.telegram_bot"/>
            <argument type="service" id="app.repository.telegram_payment_method"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>

            <tag name="console.command" command="telegram:bot:payment-method:remove"/>
        </service>
        <service id="app.command.telegram_bot_message_send"
                 class="App\Command\Telegram\TelegramBotMessageSendCommand" lazy="true">
            <argument type="service" id="app.repository.telegram_bot"/>
            <argument type="service" id="app.telegram_registry"/>
            <argument type="service" id="app.telegram_message_sender"/>

            <tag name="console.command" command="telegram:bot:message:send"/>
        </service>
    </services>
</container>
