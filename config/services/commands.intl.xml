<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="app.command.intl_currencies_update" class="App\Command\Intl\CurrenciesUpdateCommand" lazy="true">
            <argument type="service" id="app.intl_telegram_bot_currencies_fetcher"/>
            <argument type="service" id="app.normalizer.intl_currency"/>
            <argument>%app.currencies_path%</argument>

            <tag name="console.command" command="intl:currencies:update"/>
        </service>
    </services>
</container>
