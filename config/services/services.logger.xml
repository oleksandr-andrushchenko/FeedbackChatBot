<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="app.logger_activity" class="App\Service\Logger\ActivityLogger" lazy="true">
            <argument type="service" id="monolog.logger.activities"/>
            <argument type="service" id="serializer"/>
        </service>
        <service id="app.logger_processor_environment" class="App\Service\Logger\Processor\EnvironmentLoggerProcessor"
                 lazy="true">
            <argument>%app.stage%</argument>
            <argument>%kernel.environment%</argument>
            <tag name="monolog.processor"/>
        </service>
    </services>
</container>